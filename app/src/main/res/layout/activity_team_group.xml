<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="20dp"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:background="@color/dark"
    android:orientation="vertical"
    android:id="@+id/team_view">


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="16dp">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingHorizontal="15dip"
                android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/core_team"
                android:layout_width="67dp"
                android:layout_height="67dp"
                android:src="@drawable/coreteam_icon"
                android:layout_gravity="center"
                card_view:civ_border_color="@color/dark"
                card_view:civ_border_width="2dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Core Team"
                android:fontFamily="@font/helveticaneue_mediumcond"
                android:textColor="@color/white"
                android:paddingTop="5dp"
                android:textSize="@dimen/title_text_size" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingHorizontal="15dip"
                android:orientation="vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/marketing_team"
                    android:layout_width="67dp"
                    android:layout_height="67dp"
                    android:src="@drawable/marketing_icon"
                    android:layout_gravity="center"
                    card_view:civ_border_color="@color/dark"
                    card_view:civ_circle_background_color="@color/white"
                    card_view:civ_border_width="2dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Marketing"
                    android:paddingTop="5dp"
                    android:fontFamily="@font/helveticaneue_mediumcond"
                    android:textColor="@color/white"
                    android:textSize="@dimen/title_text_size" />

            </LinearLayout>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingHorizontal="15dip">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/publicity_team"
                    android:layout_width="67dp"
                    android:layout_height="67dp"
                    android:layout_gravity="center"
                    android:src="@drawable/publicity_icon"
                    card_view:civ_border_color="@color/dark"
                    card_view:civ_circle_background_color="@color/white"
                    card_view:civ_border_width="2dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/helveticaneue_mediumcond"
                    android:text="Publicity"
                    android:paddingTop="5dp"
                    android:textColor="@color/white"
                    android:textSize="@dimen/title_text_size" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingHorizontal="15dip">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/pubrel_team"
                    android:layout_width="67dp"
                    android:layout_height="67dp"
                    android:layout_gravity="center"
                    android:src="@drawable/pubrel_icon"
                    card_view:civ_border_color="@color/dark"
                    card_view:civ_circle_background_color="@color/white"
                    card_view:civ_border_width="2dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:fontFamily="@font/helveticaneue_mediumcond"
                    android:text="Public Relations"
                    android:paddingTop="5dp"
                    android:textColor="@color/white"
                    android:textSize="@dimen/title_text_size" />

            </LinearLayout>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="16dp">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingHorizontal="15dip"
                android:orientation="vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/events_team"
                    android:layout_width="67dp"
                    android:layout_height="67dp"
                    android:src="@drawable/eventteam_icon"
                    android:layout_gravity="center"
                    card_view:civ_border_color="@color/dark"
                    card_view:civ_circle_background_color="@color/white"
                    card_view:civ_border_width="2dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Events"
                    android:paddingTop="5dp"
                    android:fontFamily="@font/helveticaneue_mediumcond"
                    android:textColor="@color/white"
                    android:textSize="@dimen/title_text_size" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingHorizontal="15dip"
                android:orientation="vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/opnlog_team"
                    android:layout_width="67dp"
                    android:layout_height="67dp"
                    android:src="@drawable/opnlog_icon"
                    android:layout_gravity="center"
                    card_view:civ_border_color="@color/dark"
                    card_view:civ_circle_background_color="@color/white"
                    card_view:civ_border_width="2dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingTop="5dp"
                    android:text="Operations And Logistics"
                    android:fontFamily="@font/helveticaneue_mediumcond"
                    android:textColor="@color/white"
                    android:textSize="@dimen/title_text_size" />

            </LinearLayout>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="16dp">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingHorizontal="15dip"
                android:orientation="vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/technical_team"
                    android:layout_width="67dp"
                    android:layout_height="67dp"
                    android:src="@drawable/technical_icon"
                    android:layout_gravity="center"
                    card_view:civ_border_color="@color/dark"
                    card_view:civ_circle_background_color="@color/white"
                    card_view:civ_border_width="2dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Technical"
                    android:paddingTop="5dp"
                    android:fontFamily="@font/helveticaneue_mediumcond"
                    android:textColor="@color/white"
                    android:textSize="@dimen/title_text_size" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingHorizontal="15dip"
                android:orientation="vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/creative_team"
                    android:layout_width="67dp"
                    android:layout_height="67dp"
                    android:src="@drawable/creative_icon"
                    android:layout_gravity="center"
                    card_view:civ_border_color="@color/dark"
                    card_view:civ_circle_background_color="@color/white"
                    card_view:civ_border_width="2dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Creative"
                    android:paddingTop="5dp"
                    android:fontFamily="@font/helveticaneue_mediumcond"
                    android:textColor="@color/white"
                    android:textSize="@dimen/title_text_size" />

            </LinearLayout>
        </TableRow>
    </TableLayout>
</ScrollView>