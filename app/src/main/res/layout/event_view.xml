<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="150dp"
android:background="@color/black"
android:clickable="true"
android:focusable="true"
android:foreground="?attr/selectableItemBackground"
app:cardCornerRadius="0dp">

<ImageView
    android:id="@+id/event_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:contentDescription="@null"
    android:scaleType="centerCrop"
    android:src="@color/no1" />

<ImageView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:alpha="0.2"
    android:src="@color/black" />

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/event_icon"
        android:layout_width="98dp"
        android:layout_height="65dp"
        android:layout_alignBottom="@+id/event_desc"
        android:layout_alignParentStart="true"
        android:layout_marginStart="83dp"
        android:layout_marginBottom="3dp"
        android:src="@drawable/toolika_icon" />

    <TextView
        android:id="@+id/event_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="180dp"
        android:layout_marginBottom="80dp"
        android:fontFamily="@font/helveticaneue_mediumcond"
        android:shadowRadius="10"
        android:text="Toolika"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="@dimen/title_text_size" />

    <TextView
        android:id="@+id/event_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/event_title"
        android:layout_alignParentStart="true"
        android:layout_marginStart="180dp"
        android:layout_marginBottom="-61dp"
        android:shadowRadius="10"
        android:text="Description"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="@dimen/desc_text_size" />
</RelativeLayout>
</androidx.cardview.widget.CardView>